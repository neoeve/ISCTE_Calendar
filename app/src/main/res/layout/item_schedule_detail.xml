<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/schedule_item_background"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"> <!-- Adicionada a orientação -->

    <TextView
        android:id="@+id/scheduleSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/scheduleTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textColor="#333333" /> <!-- Cor neutra -->

    <TextView
        android:id="@+id/scheduleClassRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#455A64" />
</LinearLayout>
